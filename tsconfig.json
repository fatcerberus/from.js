{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib":    [ "esnext" ],
    "outDir": "./dist",

    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "useDefineForClassFields": true,
    "verbatimModuleSyntax": true
  },
}
